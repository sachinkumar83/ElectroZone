@using OnlineShoppingManagement.Models;


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Telecom Shopping Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/a6100c8398.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <style>
        .container-fluid {
            background-color: rgb(0, 0, 0);
        }

        .nav-link {
            color: white;
            font-size: 13px;
            font-weight: 600;
        }

            .nav-link:hover {
                color: white;
            }

        .d-flex .form-control me-2 {
            padding: 5px;
            margin-right: 100px;
        }

        .btn btn-outline-success [type=submit] {
            border-radius: 1px;
            height: 10px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            -webkit-transition: all 200ms linear;
            transition: all 200ms linear;
            padding: 0 10px;
            letter-spacing: 1px;
            -webkit-align-items: center;
            align-items: center;
            text-align: center;
            border: none;
            color: brown;
        }

        .btn:active,
        .btn:focus {
            background-color: #102770;
            color: #ffeba7;
            box-shadow: 0 8px 24px 0 rgba(16,39,112,.2);
        }

        .btn:hover {
            background-color: #102770;
            color: #ffeba7;
            box-shadow: 0 8px 24px 0 rgba(16,39,112,.2);
        }

        .no-underline {
            text-decoration: none;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary" style="position:relative">
        <div class="container-fluid">
            <a style="color:white" class="navbar-brand" href="#">Electro Zone</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item">

                        @Html.ActionLink("Dashboard", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <select style="color: white; background-color: #8f8a8a; border: none" class="nav-link" id="Category">
                            <option style="color: black; background-color: white; border: none; padding-left: 2em" value="CAT" selected disabled>All Category</option>
                            <option style="color: black; background-color: white; border: none" value="SM">SmartPhones</option>
                            <option style="color: black; background-color: white; border: none" value="ACC">Accessories</option>
                            <option style="color: black; background-color: white; border: none" value="TP">Telecom Plans</option>
                            <option style="color: black; background-color: white; border: none" value="TB">Tablets</option>
                            <option style="color: black; background-color: white; border: none" value="LAP">Laptops</option>
                            <option style="color: black; background-color: white; border: none" value="BD">Bluetooth Devices</option>
                            <option style="color: black; background-color: white; border: none" value="SW">Smartwatches</option>
                            <option style="color: black; background-color: white; border: none" value="HS">Headsets</option>
                            <option style="color: black; background-color: white; border: none" value="PB">Power Banks</option>
                            <option style="color: black; background-color: white; border: none" value="VR">VR Headsets</option>
                            <option style="color: black; background-color: white; border: none" value="CAT">All Category</option>
                        </select>
                    </li>

                 
                </ul>
            </div>
            <div>
                <div>
                    @if (ViewData["Data"] == null)
                    {
                        <!-- User is not logged in, show the "LogIn" button -->
                        <div class="nav-item">
                            @*@Html.ActionLink("LogIn", "LogInUser", "User", new { area = "" }, new { @class = "nav-link" })*@
                            <button type="button" class="nav-link" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-html="true" data-bs-content='
                                <a href="@Url.Action("LoginUser","User")" target="_blank">User</a><br>
                                <a href="@Url.Action("Login","User")" target="_blank">Admin</a>'>
                                    Log In
                        </button>
                        </div>
                    }
                    else
                    {
                        // User is logged in, show the user icon
                        var user = ViewData["Data"] as UserTBL;

                        <!-- Add the Bootstrap tooltip to the icon -->
                        <span style="color: white; margin-top: 7px; margin-left: 600px; display: flex; align-items: center;">
                            @*Hi, <span data-bs-toggle="tooltip" data-bs-placement="right" title="@user.Username">@user.Username</span>*@
                            <a href="@Url.Action("Account","Home")">
                                <i class="fa-sharp fa-solid fa-user fa-lg" style="color: white; margin-left: 10px; margin-bottom: 15px" data-bs-toggle="tooltip" data-bs-placement="bottom" title="@user.Username"></i>
                            </a>
                        </span>
                    }
                </div>

            </div>
            <div>
                <a href="@Url.Action("CheckOut","cart")">
                    <i class="fa-solid fa-cart-shopping" style="color:white;margin-left:10px;"></i>
                    <span id="cartCount" style="color:white;font-weight:bold">0</span>
                </a>

            </div>
            @*for quantity using jquery*@
            <!--<div class="nav-item">-->
            <!-- Element to display the totalQuantity -->
            <!--<span class="nav-link">
                    <span id="navbarTotalQuantity"></span>
                </span>
            </div>-->
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Telecom Shopping Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    @*------------------------------- jQuery code to handle the option selection and redirect to the corresponding link------------*@

    <script>
        $(document).ready(function () {
            $("#Category").change(function () {
                var selectedValue = $(this).val();

                // Define the links for each option
                var links = {
                    "CAT": "@Url.Action("CategoryForCustomer","Category")",
                    "SM": "@Url.Action("ShowPhones","Product")",
                    "ACC": "@Url.Action("ShowAccessories","Product")",
                    "TP": "@Url.Action("ShowTelecomPlans","Product")",
                    "TB": "@Url.Action("ShowTablets","Product")",
                    "LAP":"@Url.Action("ShowLaptops","Product")",
                    "BD":"@Url.Action("ShowBluetoothDevices","Product")",
                    "SW":"@Url.Action("ShowSmartwatches","Product")",
                    "HS":"@Url.Action("ShowHeadsets","Product")",
                    "PB":"@Url.Action("ShowPowerBanks","Product")",
                    "VR": "@Url.Action("ShowVRHeadsets","Product")"

                    // Add more links for other options as needed
                };

                // Redirect the user to the selected link
                if (selectedValue in links) {
                    window.location.href = links[selectedValue];
                }
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script>
        // Initialize the popover
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl)
        });
    </script>
</body>

</html>

