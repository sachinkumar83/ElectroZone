<div style="display: flex; justify-content: center;">
    <form class="contact-form" style="max-width: 900px; margin: 0 auto; background-color: #f0f0f0; padding: 20px; border: 1px solid #ccc; border-radius: 5px;">

        <input type="hidden" name="__RequestVerificationToken" value="your_antiforgery_token_here">

        <div class="form-group">
            <label for="Name" style="color: #333; font-weight: bold;">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" style="border: 1px solid #aaa; color: #333;">
            <span class="text-danger" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label for="MobileNumber" style="color: #333; font-weight: bold;">Mobile Number</label>
            <input type="text" class="form-control" id="MobileNumber" name="MobileNumber" placeholder="Mobile Number" style="border: 1px solid #aaa; color: #333;">
            <span class="text-danger" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label for="Address" style="color: #333; font-weight: bold;">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" placeholder="Address" style="border: 1px solid #aaa; color: #333;">
            <span class="text-danger" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label for="Pincode" style="color: #333; font-weight: bold;">Pincode</label>
            <input type="text" class="form-control" id="Pincode" name="Pincode" placeholder="Pincode" style="border: 1px solid #aaa; color: #333;">
            <span class="text-danger" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label for="State" style="color: #333; font-weight: bold;">State</label>
            <input type="text" class="form-control" id="State" name="State" placeholder="State" style="border: 1px solid #aaa; color: #333;">
            <span class="text-danger" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label for="PaymentOptions" style="color: #333; font-weight: bold;">Payment Options</label>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="CashOnDelivery" name="PaymentOptions" value="CashOnDelivery" style="margin-right: 10px;">
                <label for="CashOnDelivery" class="form-check-label" style="color: #333;">Cash on Delivery</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="UpiPay" name="PaymentOptions" value="UpiPay" style="margin-right: 10px;">
                <label for="UpiPay" class="form-check-label" style="color: #333;">UPI Pay</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" id="NetBanking" name="PaymentOptions" value="NetBanking" style="margin-right: 10px;">
                <label for="NetBanking" class="form-check-label" style="color: #333;">Net Banking</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">Save Contact Details</button>
    </form>
</div>
