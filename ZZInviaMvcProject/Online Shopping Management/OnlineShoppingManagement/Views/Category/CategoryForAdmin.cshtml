


@model IEnumerable<OnlineShoppingManagement.Models.Category>

@{
    ViewBag.Title = "CategoryForAdmin";
}

<style>
    /* Custom CSS for Admin Dashboard */
    .container {
        padding: 20px;
    }

    h2 {
        color: #333;
        margin-bottom: 20px;
    }

    h3 {
        color: #555;
    }

    /* Style for the category filter input field */
    #categoryFilter {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    /* Style for category cards */
    .category-card {
        margin-bottom: 20px;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #f1f1f1;
        border-radius: 5px;
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .card-text {
        color: #555;
    }

    .btn-group {
        margin-top: 15px;
    }

    .btn {
        font-size: 14px;
        padding: 8px 15px;
    }

    .btn-info {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .btn-info:hover {
            background-color: #0056b3;
        }
</style>

<div class="container">
    <!-- Admin Dashboard -->
    <h2 style="font-size: 28px; font-weight: bold; color: #333; text-transform: uppercase; border-bottom: 2px solid #333; padding-bottom: 10px;">ADMIN DASHBOARD</h2>

    <!-- Category Filter Input -->
    <div class="col-md-4">
        <div class="form-group">
            <input type="text" class="form-control" id="categoryFilter" placeholder="Search Category">
        </div>
    </div>

    <h3>Categories</h3>

    <!-- Category Cards -->
    <div class="row">
        @{
            // Sort the categories by name alphabetically
            var sortedCategories = Model.OrderBy(c => c.Name);
        }

        @foreach (var item in sortedCategories)
        {
            <div class="col-md-4 category-card" data-category-name="@item.Name" data-category-description="@item.Description">
                @*included the decription for search*@
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- Category Name -->
                        <h5 class="card-title">@item.Name</h5>
                        <!-- Category Description -->
                        <p class="card-text">@item.Description</p>
                        <div class="btn-group">
                            <!-- Show Products Button -->
                            @Html.ActionLink("Show Products", "RedirectToProductViewAdmin", new { id = item.CategoryId }, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- No category found message -->
    <div class="row" id="noCategoryFoundMessage" style="display: none;">
        <div class="col-md-12 mt-4 text-center">
            <h3>No category found</h3>
        </div>
    </div>
</div>

<!-- Category Filter Script -->
<script>
    $(document).ready(function () {
        // Attach event listener to the category filter input field
        $("#categoryFilter").on("input", function () {
            var filterText = $(this).val().toLowerCase();

            var hasMatchingCategories = false;

            // Show/hide category cards based on the filter text
            $(".category-card").each(function () {
                var categoryName = $(this).data("category-name").toLowerCase();
                var categoryDescription = $(this).data("category-description").toLowerCase();
                var matched = categoryName.indexOf(filterText) !== -1 || categoryDescription.indexOf(filterText) !== -1;
                $(this).toggle(matched);

                if (matched) {
                    hasMatchingCategories = true;
                }
            });

            // Show/hide "No category found" message
            $("#noCategoryFoundMessage").toggle(!hasMatchingCategories);
        });
    });
</script>
